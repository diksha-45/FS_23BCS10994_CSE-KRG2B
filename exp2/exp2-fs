<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic Product Filter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .filter-section {
      margin-bottom: 20px;
    }
    .products {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
    }
    .card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 10px;
      text-align: center;
      background: #f9f9f9;
      box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
    }
    .empty-message {
      color: red;
      font-style: italic;
      text-align: center;
    }
  </style>
</head>
<body>

  <h2>Product Filter</h2>

  <!-- Filter Dropdown -->
  <div class="filter-section">
    <label for="category">Filter by Category: </label>
    <select id="category">
      <option value="all">All</option>
      <option value="electronics">Electronics</option>
      <option value="clothing">Clothing</option>
      <option value="books">Books</option>
    </select>
  </div>

  <!-- Products Display -->
  <div class="products" id="products"></div>
  <div class="empty-message" id="emptyMsg"></div>

  <script>
    // --- 1. Product Dataset ---
    const products = [
      { name: "Laptop", price: 50000, category: "electronics" },
      { name: "Headphones", price: 2000, category: "electronics" },
      { name: "T-shirt", price: 500, category: "clothing" },
      { name: "Jeans", price: 1200, category: "clothing" },
      { name: "JavaScript Book", price: 700, category: "books" },
      { name: "Novel", price: 400, category: "books" }
    ];

    // DOM Elements
    const dropdown = document.querySelector("#category");
    const productContainer = document.querySelector("#products");
    const emptyMessage = document.querySelector("#emptyMsg");

    // --- 2. Function to Render Products ---
    function renderProducts(items) {
      productContainer.innerHTML = ""; 
      emptyMessage.textContent = "";

      if (items.length === 0) {
        emptyMessage.textContent = "No products found for this category.";
        return;
      }

      items.forEach(product => {
        const card = document.createElement("div");
        card.classList.add("card");
        card.innerHTML = `<h3>${product.name}</h3><p>â‚¹${product.price}</p>`;
        productContainer.appendChild(card);
      });
    }

    // --- 3. Filter Logic ---
    function filterProducts() {
      const selectedCategory = dropdown.value;
      const filtered = selectedCategory === "all"
        ? products
        : products.filter(item => item.category === selectedCategory);
      renderProducts(filtered);
    }

    // --- 4. Event Listener for Dropdown ---
    dropdown.addEventListener("change", filterProducts);

    // Initial render
    renderProducts(products);
  </script>

</body>
</html>
